<div class="main-container">
    <div class="main-container-heading">
      <div>
        <p class="review-publish-detail">
          <span id="review-publisher"><%- review.publisher %></span>
          <span id="review-publish-year"><%- review.published_year %></span>
        </p>
        <input
          type="text"
          class="review-title"
          placeholder="Title"
          max="255"
          id="review-title"
          value="<%- review.title %>"
        />
        <input
          type="text"
          class="review-author"
          id="review-author"
          placeholder="Author"
          max="255"
          value="<%- review.author %>"
        />
      </div>
      <div class="save-button-container">
        <button id="save-button"><img src="/icons/saveIcon.png" alt=" save icon "></button>
        <a id="delete-button" href="#" data-slug="<%- review.slug %>">
            <img src="/icons/deleteIcon.png" alt="delete icon">
          </a>          
      </div>
    </div>
  
    <div class="grid4">
      <div class="review-rating">
        <div class="rating-section" id="setting-rating" data-rating="0">
          <h1 class="rating-title">Setting</h1>
          <p class="rating-description">World-building, lore, atmosphere, etc</p>
          <div class="rating-stars">
            <img
              src="/icons/ratingStarIcon.svg"
              alt="Star 1 of 5 - Rating"
              class="star-icon"
            />
