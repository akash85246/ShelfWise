<!-- hero section -->
<div class="hero-container">
  <div class="hero-wrapper">
    <div class="hero-content" style='background-image: linear-gradient(rgba(0, 0, 0, 0.1), rgba(0, 0, 0, 0.4)), url(../../banners/home-hero-section.png);'>
      <div class="hero-text">
        <h1 class="hero-title">Discover. Review. Share.</h1>
        <h2 class="hero-subtitle">Thousands of book lovers, one platform.</h2>
      </div>

      <label class="search-label">
        <div class="search-box">
          <div class="search-icon">
            <svg xmlns="http://www.w3.org/2000/svg" width="20px" height="20px" fill="currentColor" viewBox="0 0 256 256">
              <path
                d="M229.66,218.34l-50.07-50.06a88.11,88.11,0,1,0-11.31,11.31l50.06,50.07a8,8,0,0,0,11.32-11.32ZM40,112a72,72,0,1,1,72,72A72.08,72.08,0,0,1,40,112Z"
              ></path>
            </svg>
          </div>
          <input
            placeholder="Search by title, author, or genre"
            class="search-input"
            id="search-input"
            value=""
          />
          <div class="search-button-wrapper">
            <a class="search-button" href="/create">
              <span class="search-button-text">Start Reviewing</span>
            </a>
          </div>
        </div>
        <ul class="result-list hidden" id="result-list"></ul>
      </label>
      
    </div>
  </div>
</div>

<!-- popular review card -->
<ul class="popular-review-cards">
  <% reviews.forEach((review) => { %>
    <%- include("../partials/popularReviewCard.ejs" ,{review})  %>
    <% }) %>
</ul>

